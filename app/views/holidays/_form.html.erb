<%= form_with model: @holiday, local: true do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_field :date, autofocus: true, autocomplete: "description" %>
  </div>
  <div class="field">
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </div>
  <div class="actions admin-add-cancel-buttons-container">
    <%= f.submit "Save", class: "btn btn-primary" %>
    <%= link_to "Cancel", holidays_path, class: "btn btn-danger" %>
  </div>
<% end %>